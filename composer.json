{
  "require": {
      "compass/cake-guard": "1.0.0"
  },
  "require-dev": {
    "phing/phing": "2.*",
    "pdepend/pdepend" : "2.2.2",
    "phpmd/phpmd" : "@stable",
    "squizlabs/php_codesniffer": "2.*"
  },
  "scripts": {
      "post-install-cmd": [
          "[ -L app/plugins/guard ] || [ -d app/plugins/guard ] || ln -s ../../vendor/compass/cake-guard app/plugins/guard"
      ]
  }
}
