{
  "require": {
      "compass/cake-guard": "1.0.1"
  },
  "require-dev": {
    "phing/phing": "2.*",
    "pdepend/pdepend" : "2.*",
    "phpmd/phpmd" : "@stable",
    "squizlabs/php_codesniffer": "2.*",
    "sebastian/phpcpd": "*",
    "phpdocumentor/phpdocumentor": "2.*"
  },
  "scripts": {
      "post-install-cmd": [
          "[ -L app/plugins/guard ] || [ -d app/plugins/guard ] || ln -s ../../vendor/compass/cake-guard app/plugins/guard"
      ]
  },
  "config": {
      "platform": {
          "php": "5.3.3"
      }
  }
}
